<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reporting System</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/jquery-modal/jquery.modal.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-modal/jquery.modal.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="navbar">
        <div class="logo">
            <a href="index.php"><img src="~/images/logo.png" alt="Logo"></a>
        </div>
        <div class="menu-mobile" id="mnu-secondary">
            <img src="~/images/menu.svg" alt="">
        </div>
        <div class="menu" id="mnu-primary">
            <ol>
                @ViewData["Menu"]
            </ol>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>

    <div id="modal-public" class="modal">
        <div class="modal-head">

        </div>
        <div class="modal-text">

        </div>
        <div class="modal-foot">

        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
