@*inject  Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Reporting System</title>

    <link rel="stylesheet" href="~/css/devextreme/dx.material.teal.light.css" />
    <link rel="stylesheet" href="~/css/devextreme/dx.common.css" />
    
    <environment names="Production,Staging">
        <link rel="stylesheet" href="~/css/dx.custom.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" />
    </environment>
    <environment names="Development">
        <link rel="stylesheet" href="~/css/dx.custom.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <link rel="stylesheet" href="~/lib/jquery-modal/jquery.modal.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/devextreme/jszip.min.js"></script>
    <environment names="Production,Staging">
        <script src="~/js/devextreme/dx.all.js"></script>
    </environment>
    <environment names="Development">
        <script src="~/js/devextreme/dx.all.debug.js"></script>
    </environment>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.min.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.min.js"></script>
    <script src="~/lib/jquery-modal/jquery.modal.min.js"></script>
    <environment names="Production,Staging">
        <script src="~/js/site.min.js"></script>
    </environment>
    <environment names="Development">
        <script src="~/js/site.js"></script>
    </environment>
</head>
<body>
    <div class="navbar">
        <div class="logo">
            <a href="~/">
                <img src="~/images/business-presentation.svg" alt="" />
                Management Reporting System
            </a>
        </div>
        <div class="menu-mobile" id="mnu-secondary">
            <img src="~/images/menu.svg" alt="">
        </div>
        <div class="menu" id="mnu-primary">
            <ol>
                <partial name="_Navs" />
            </ol>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="footer">
        &copy; 2019 <a href="https://tyfountex.com/">TyFountex</a> All Right Reserved.
    </div>
    <div id="modal-public" class="modal">
        <div class="modal-head">

        </div>
        <div class="modal-text">

        </div>
        <div class="modal-foot">

        </div>
    </div>
    <div id="loader" class="loader">
        <img src="~/images/loading.gif" alt="Loading" />
    </div>
</body>
</html>
